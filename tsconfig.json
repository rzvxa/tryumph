{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "lib": ["es5", "dom", "es2015", "es2015.collection"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",

    "strict": false,

    "moduleResolution": "node",
    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
